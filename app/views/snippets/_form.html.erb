<%= form_for(@snippet) do |f| %>
  <% if @snippet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@snippet.errors.count, "error") %> prohibited this snippet from being saved:</h2>

      <ul>
      <% @snippet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :language %><br>
    <%= f.select :language, Snippet.languages.keys.map { |k| [Snippet::API_LANGUAGES[k.to_sym], k] } %>
  </div>
  <div class="field">
    <%= f.label :plain_code %><br>
    <%= f.text_area :plain_code, rows: 20, cols: 80 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
